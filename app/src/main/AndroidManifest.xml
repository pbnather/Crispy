<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.au.itsmap.group4.crispy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Crispy">
        <activity
            android:name=".ui.recipe.recipeList.RecipeListActivity"
            android:label="@string/app_name"
            android:theme="@style/Crispy.NoActionBar">

        </activity>
        <activity
            android:name=".ui.recipe.recipeDetail.RecipeDetailActivity"
            android:label="@string/title_recipe_detail"
            android:parentActivityName=".ui.recipe.recipeList.RecipeListActivity"
            android:theme="@style/Crispy.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dk.au.itsmap.group4.crispy.ui.recipe.recipeList.RecipeListActivity" />
        </activity>
        <activity android:name=".ui.mealsPlan.mealsList.MealsPlanActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".ui.mealsPlan.addPlannedMeal.AddPlannedMealActivity"/>
        <activity android:name=".ui.groceryList.GroceryListActivity" />
        <activity
            android:name=".ui.account.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".ui.account.AccountActivity"></activity>
    </application>

</manifest>