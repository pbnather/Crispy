<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.au.itsmap.group4.crispy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/new_crispy_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/new_crispy_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Crispy.NoActionBar">
        <activity
            android:name=".ui.MainNavigationActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".ui.groceryList.GroceryListActivity" />
        <activity
            android:name=".ui.account.LoginActivity"
            android:label="@string/title_activity_login" />

        <service android:name=".service.notifications.NotificationIntentService" android:exported="false" />
    </application>

</manifest>